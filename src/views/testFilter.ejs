<!DOCTYPE html>
<html>
<head>
  <title>Tabla de datos de la API</title>
  <link rel="stylesheet" type="text/css" href="../styles/test.css">
</head>
<body>

  <input type="text" id="filtroNombre" placeholder="Ingresa el nombre" filtroNombre>
  <input type="text" id="filtroID" placeholder="Ingresa el ID" filtroID>

    <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Acciones</th> <!-- delete button -->
      </tr>
    </thead>
    <tbody id="data">
      <% data.forEach(item => { %>
        <tr id="row-<%= item.id_uen %>"> <!--Unique value per row in reference of id_uen-->
          <td><%= item.id_uen %></td>
          <td><%= item.nombre %></td>
          <td>
            <button onclick="deleteRow('<%= item.id_uen %>')">Borrar</button>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>


  <hr>
  
  <script>
    const searchInputNombre = document.getElementById("filtroNombre");
    const searchInputID = document.getElementById("filtroID");
    const rows = Array.from(document.querySelectorAll("#data tr")); //Scroll and select all data from tr (table)

    searchInputNombre.addEventListener("input", (e) => {
      const value = e.target.value.toLowerCase();

      rows.forEach(row => {
        const nombreCell = row.querySelector("td:nth-child(2)");
        const nombre = nombreCell.textContent.toLowerCase();
        const isVisible = nombre.includes(value);

        row.style.display = isVisible ? "" : "none";
      });
    });

    searchInputID.addEventListener("input", (e) => {
      const value = e.target.value.toLowerCase();

      rows.forEach(row => {
        const idCell = row.querySelector("td:nth-child(1)");
        const id = idCell.textContent.toLowerCase();
        const isVisible = id.includes(value);

        row.style.display = isVisible ? "" : "none";
      });
    });

    function deleteRow(id) {
      // Send a DELETE request to the server with the row ID
      fetch(`/api/v1/uen/${id}`, { method: "DELETE" })
        .then(response => {
          if (response.ok) {
            // Remove the row from the table if the deletion was successful
            const row = document.getElementById(`row-${id}`);
            row.remove();
            location.reload();
          }
        })
        .catch(error => console.error('Error al borrar los datos de la API:', error));
    }
  </script>



  <form id="orden" action="/testFilter" method="GET" class="form">
    <select name="orden" id="orden">
      <option id="Opciones" value="Opciones">Opciones</option>
        <option id="ascendente" value="ascendente">Ascendente</option>
        <option id="descendente" value="descendente">Descendente</option>
    </select>
    <button type="submit" value="submit" class="btn-filtrar" >Filtrar</button>
</form>


</body>
</html>